{
  "name": "video-editor-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A WASM-powered video editor with non-destructive EDL editing",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @video-editor/demo dev",
    "build": "pnpm --filter @video-editor/core build && pnpm --filter @video-editor/demo build",
    "build:core": "pnpm --filter @video-editor/core build",
    "build:demo": "pnpm --filter @video-editor/demo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.2.3",
      "@types/react-dom": "^19.2.3"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
